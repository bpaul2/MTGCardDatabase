<Window x:Class="MTGDB_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTGDB_Test"
        mc:Ignorable="d"
        Title="MTG Database" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="279*"/>
        </Grid.ColumnDefinitions>
        <!-- Get card info -->
        <Button Content="Get Card" HorizontalAlignment="Left" Margin="50,175,0,0" VerticalAlignment="Top" Width="132" Height="40" Click="GetCardClick"/>
        <!-- Display card info -->
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="538" Background="#FFDDDDDD"/>

    </Grid>
</Window>
